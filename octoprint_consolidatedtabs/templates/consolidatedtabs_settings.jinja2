<h4>Consolidated Tabs Settings</h4>
<form class="form-horizontal" id="consolidatedtabs_settings_form">
	<div class="row-fluid"><h5><u>{{ _('Combined Tabs Order') }}</u></h5></div>
	<div class="row-fluid">
		<div class="span11 well" style="min-height: 50px;" data-bind="sortable: { data: settings.settings.plugins.consolidatedtabs.tab_order, options: { cancel: '.unsortable', handle: '.move_tab', axis:'y'} }">
			<div class="row-fluid" style="margin-bottom: 5px;">
				<div class="btn-group input-prepend input-append" style="text-align: center;"><span class="btn btn-mini icon-move move_tab add-on"></span></span><span class="add-on">{{ _('Size') }}</span><input class="input-mini" type="number" min="1" max="12" data-bind="value: scaffolding"></input><span class="btn btn-mini btn-danger icon-trash add-on" data-bind="click: $root.removeTab"></span><span class="add-on" data-bind="text: name"></div>
			</div>
		</div>
	</div>
	<div class="row-fluid"><h5><u>{{ _('Uncombined Tabs') }}</u></h5></div>
	<div class="row-fluid">
		<div class="span11 well" style="min-height: 50px;" data-bind="sortable: { data: unassignedTabs, options: { cancel: '.unsortable', handle: '.move_tab', axis:'y'} }">
			<div class="row-fluid" style="margin-bottom: 5px;">
				<div class="span1 btn-group" style="text-align: center;"><button class="btn btn-mini icon-plus" data-bind="click: $root.addTab"></button></div>
				<div class="span11" data-bind="text: name"></div>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="row-fluid" style="padding-top: 3px;">
			<label class="checkbox">
			<input type="checkbox" data-bind="checked: settings.settings.plugins.consolidatedtabs.resize_navbar" /> {{ _('Resize Navbar') }}
			</label>
		</div>
	</div>
	<div class="row-fluid"><h5><u>{{ _('Overall Width') }}</u></h5></div>
	<div class="row-fluid input-append"><input type="number" class="input input-small" data-bind="value: settings.settings.plugins.consolidatedtabs.width"/><span class="add-on">px</span></div>
	<div class="row-fluid"><h5><u>{{ _('Tab Content Width') }}</u></h5></div>
	<div class="row-fluid input-prepend"><span class="add-on">span</span><input class="input input-small" type="number" min="1" max="12" data-bind="value: settings.settings.plugins.consolidatedtabs.content_width"/></div>
</form>
